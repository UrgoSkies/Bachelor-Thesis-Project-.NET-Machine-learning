@{
    ViewData["Title"] = "Book Recommendations";
}

<h1>Rate Books</h1>
<form id="ratingForm">
    <label for="user">Выберите пользователя:</label>
    <select id="user" name="user">
        <option value="1">Пользователь A</option>
        <option value="2">Пользователь B</option>
        <option value="3">Пользователь C</option>
    </select><br><br>

    <label for="book1">Оценка книги A:</label>
    <input type="number" id="book1" name="book1" min="0" max="10"><br><br>
    <label for="book2">Оценка книги B:</label>
    <input type="number" id="book2" name="book2" min="0" max="10"><br><br>
    <label for="book3">Оценка книги C:</label>
    <input type="number" id="book3" name="book3" min="0" max="10"><br><br>
    <label for="book4">Оценка книги D:</label>
    <input type="number" id="book4" name="book4" min="0" max="10"><br><br>
    <label for="book5">Оценка книги E:</label>
    <input type="number" id="book5" name="book5" min="0" max="10"><br><br>

    <input type="submit" value="Отправить">
</form>

<h2>Top Recommendations</h2>
<ul id="recommendationsList"></ul>

<canvas id="recommendationChart"></canvas>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="~/js/site.js"></script>
}
